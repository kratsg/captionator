{
  "title": "Play Format",
  "description": "This is a schema defining the strict format for writing slides that get put on captionator.",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://jsonschema.net",
  "type": "array",
  "items": {
    "anyOf": [
        {
            "type": "object",
            "additionalProperties": {"type": "string"}
        },
        {
            "type": "object",
            "additionalProperties": {"type": "array"}
        },
        {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "additionalProperties": {"type": "string"}
                    },
                    {
                        "type": "object",
                        "additionalProperties": {"type": "array"}
                    }
                ]
            }
        }
    ]
  },
  "minItems": 1,
  "additionalItems": false
}
